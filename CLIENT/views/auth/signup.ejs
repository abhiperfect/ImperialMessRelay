<%- include("../partials/header.ejs") %>  
<div class="indexContainer">
  <div class="post-box">
  <form action="/signup" method="post" class="signup row g-4 mx-auto m-4 needs-validation" novalidate>
    <div class="col-md-12">
      <label for="validationCustom01" class="form-label">Name</label>
      <input type="text" class="form-control" id="validationCustom01" placeholder="Enter your name" name="name" required>
      <div class="valid-feedback">
        Looks good!
      </div>
    </div>
    <div class="col-md-12">
        <label for="validationCustom02" class="form-label">Email</label>
        <input type="email" class="form-control" id="validationCustom02" placeholder="Enter your email" name="email" required>
        <div class="valid-feedback">
          Looks good!
        </div>
    </div>
    <div class="col-md-12">
        <label for="validationCustom03" class="form-label">Password</label>
        <input type="password" class="form-control" id="validationCustom02" placeholder="Enter your password" name="password" required>
        <div class="valid-feedback">
          Looks good!
        </div>
      </div>
    <% if(user != "developer" && user != "chiefwarden"){ %>
    <div class="col-md-12">
      <label for="validationCustom04" class="form-label">Hostel</label>
      <div class="valid-feedback">
        Looks good!
      </div>
      <select class="form-select" id="validationCustom05" name="hostel" required>
        <option selected disabled value="">Choose your hostel</option>
        <option value="Raman">Raman</option>
        <option value="Patel">Patel</option>
        <option value="Malviya">Malviya</option>
        <option value="Tagore">Tagore</option>
        <option value="Tilak">Tilak</option>
      </select>
    </div>
    <div class="col-md-12">
      <label for="validationCustom06" class="form-label">Room no.</label>
      <input type="text" class="form-control" id="validationCustom03" placeholder="Enter your room no." name="room" required>
      <div class="invalid-feedback">
        Please provide a valid room no.
      </div>
    </div>
    <% } %>
    <div class="col-md-12">
      <label for="validationCustom07" class="form-label">Gender</label>
        <br>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="inlineRadio1" name="gender" value="male">
        <label class="form-check-label" for="inlineRadio1">Male</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="inlineRadio2" name="gender" value="female">
        <label class="form-check-label" for="inlineRadio2">Female</label>
      </div>
      <div class="form-check form-check-inline">
        <input class="form-check-input" type="radio" id="inlineRadio3" name="gender" value="others">
        <label class="form-check-label" for="inlineRadio3">Others</label>
      </div>
    </div>
    <div class="col-12">
      <div class="form-check">
        <input class="form-check-input" type="checkbox" value="" id="invalidCheck" required>
        <label class="form-check-label" for="invalidCheck">
          Agree to terms and conditions
        </label>
        <div class="invalid-feedback">
          You must agree before submitting.
        </div>
      </div>
    </div>
    <div class="d-flex justify-content-center">
      <button class="w-300 btn btn-primary" type="submit">Sign up</button>
    </div>
  </form>
  </div>
</div>
  <%- include("../partials/footer.ejs") %>  